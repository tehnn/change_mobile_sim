<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/lic"
            android:id="@+id/textView"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/hp_mobile_2"
            android:layout_above="@+id/textView"
            android:layout_centerHorizontal="true"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtNumber"
            android:hint="0839946997"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:textColor="#170aff"
            android:layout_alignRight="@+id/textView"
            android:inputType="phone"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="sms to :"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/textView"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/tvSimSn"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/textView3"
            android:textColor="#5229ff"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/btnStart"
            android:layout_below="@+id/tvSimSn"
            android:layout_alignLeft="@+id/tvSimSn"
            android:layout_alignRight="@+id/tvSimSn"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="sim s/n :"
            android:id="@+id/textView3"
            android:layout_below="@+id/edtNumber"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/edtNumber"/>

</RelativeLayout>
